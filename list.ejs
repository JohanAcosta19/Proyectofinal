<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Usuarios</title>
    <link rel="stylesheet" href="/styles.css">
</head>
<body>
    <h1>Usuarios</h1>
    <table>
        <thead>
            <tr>
                <th>ID</th>
                <th>Nombre</th>
                <th>Correo</th>
                <th>NÃºmero de Cuenta</th>
                <th>Escuela</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            <% usuarios.forEach(usuario => { %>
            <tr>
                <td><%= usuario.id %></td>
                <td><%= usuario.nombre %></td>
                <td><%= usuario.correo %></td>
                <td><%= usuario.numero_cuenta %></td>
                <td><%= usuario.escuela %></td>
                <td>
                    <a href="/edit/<%= usuario.id %>">Editar</a>
                    <a href="/delete/<%= usuario.id %>">Eliminar</a>
                </td>
            </tr>
            <% }) %>
        </tbody>
    </table>
    <a href="/create">Agregar Usuario</a>
</body>
</html>
